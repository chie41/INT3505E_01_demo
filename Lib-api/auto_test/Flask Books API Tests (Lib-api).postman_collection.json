					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
							"\r",
							"const res = pm.response.json();\r",
							"\r",
							"pm.test(\"Có trường pagination\", () => {\r",
							"    pm.expect(res.pagination).to.have.keys([\"mode\", \"page\", \"page_size\", \"total_pages\"]);\r",
							"});\r",
							"\r",
							"pm.test(\"Mode là page\", () => {\r",
							"    pm.expect(res.pagination.mode).to.eql(\"page\");\r",
							"});\r",
							"\r",
							"pm.test(\"Data có ít nhất 1 phần tử\", () => {\r",
							"    pm.expect(res.data.length).to.be.above(0);\r",
							"});\r",
