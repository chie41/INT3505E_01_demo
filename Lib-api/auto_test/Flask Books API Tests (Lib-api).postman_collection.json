		{
			"name": "Get Cursor",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
							"\r",
							"const res = pm.response.json();\r",
							"\r",
							"pm.test(\"Có trường pagination và data\", () => {\r",
							"    pm.expect(res).to.have.property(\"pagination\");\r",
							"    pm.expect(res).to.have.property(\"data\");\r",
							"});\r",
							"\r",
							"pm.test(\"Mode là cursor\", () => {\r",
							"    pm.expect(res.pagination.mode).to.eql(\"cursor\");\r",
							"});\r",
							"\r",
							"pm.test(\"Trả về không quá 5 phần tử\", () => {\r",
							"    pm.expect(res.data.length).to.be.at.most(5);\r",
							"});\r",
							"\r",
							"pm.test(\"Có next cursor nếu chưa tới cuối danh sách\", () => {\r",
							"    if (res.data.length === 5) {\r",
							"        pm.expect(res.pagination.next).to.not.be.null;\r",
							"    }\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
